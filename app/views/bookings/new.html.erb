<div class="col-sm-offset-4 col-sm-4">
<%= simple_form_for [@booking] do |b| %>
<% if @booking.errors.any? %>
  <% @booking.errors.full_messages.each do |m| %>
    <p><%= m %></p>
  <% end %>
<% end %>
<h2>booking details</h2>
  <%= b.input :start_date %>
  <%= b.input :end_date %>
  <%= b.submit "confirm booking", class: "btn btn-primary" %>
<% end %>
<p>(Bookingss#new)</p>
</div>

