  <link href="https://fonts.googleapis.com/css?family=Bentham|Playfair+Display|Raleway:400,500|Suranna|Trocchi" rel="stylesheet">
  <div class="wrapper">
    <div class="product-img" style="background-image: url('<%= @wig.photo %>')">
  </div>
    <div class="product-info">
      <div class="product-text">
        <h2><%= @wig.title %></h2>
        <p>Description: <%= @wig.description %></p>
        <p>Location: <%= @wig.location %></p>
        <p>Policies: <%= @wig.policies %></p>
          <p>$<%= @wig.price %></p>
      </div>
      <div class="button-box">
        <div class="product-price-btn-book">
        <%= link_to 'Book', new_wig_booking_path(@wig), { :class => "wigbtn"}%>
        </div>
        <div class="product-price-btn-back">
          <%= link_to 'Back to Wigs', wigs_path, { :class => "wigbtn"}%>
        </div>
      </div>
    </div>
  </div>




