 <div class="wrapper">
   <div class="row">
    <div class="col-xs-12">
      <div class="product-img" style="background-image: url('<%= @wig.photo %>')">
    </div>
    <div class="product-info">
      <div class="product-text">
        <h2><%= @wig.title %></h2>
        <p>Description: <%= @wig.description %></p>
        <p>$<%= @wig.price %>/day</p>
      </div>
      <div class="buttons">
          <%= link_to 'Back to Wigs', wigs_path, { :class => "wigbtn btn btn-primary"} %>
          <%= link_to 'Delete', wig_path, {:method  => :delete, :class => "wigbtn btn btn-primary"} %>
      </div>
    </div>
    </div>
    <div class="col-xs-12-show">
      <%= render "bookings/form" %>
    </div>
  </div>
  </div>


