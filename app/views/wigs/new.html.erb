<div class="banner" style="background-image: /*linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%),*/ url('<%= cl_image_path ("christiana-rivers-258740-unsplash.jpg") %>')">
  <div class="banner-content">
    <h1>HairBnB</h1>
    <p>Find Your Best Look</p>
  </div>
</div>


<div class="col-sm-offset-4 col-sm-4">
<%= simple_form_for [@wig] do |w| %>
<% if @wig.errors.any? %>
  <% @wig.errors.full_messages.each do |m| %>
    <p><%= m %></p>
  <% end %>
<% end %>
<h2>Upload a new wig</h2>
  <%= w.input :title %> <%= w.input :price %>
  <%= w.input :description %>
  <%= w.input :photo %>
  <%= w.input :photo_cache, as: :hidden %>
  <%= w.input :location %>
  <%= w.input :policies %>
  <%= w.submit "submit wig", class: "btn btn-primary" %>
<% end %>

</div>




