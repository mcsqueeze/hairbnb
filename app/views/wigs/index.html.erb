<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path ("Marble-background-2-1-1") %>')">

<div class="container xs-3" >
  <div class="row">
    <div class="col-12">
      <h1>Available Looks</h1>
    </div>
  </div>

 <!--  <div class="row">
    <div class="col">
      <p>You searched for <strong><%= @query %></strong>. We found <%= @wigs.count %> on our website.</p>
    </div>
  </div> -->

  <div class="row">
    <% @wigs.each do |wig| %>
      <div class="col-4">
        <div class="wig-card">
          <div class="wig-card-image" style="background-image: url('<%= wig.photo %>')"></div>
          <div class="wig-card-content">
            <div class="wig-card-photo">
              <h4><%= cl_image_tag wig.photo%></h4>
            </div>
            <div class="wig-card-title">
              <h4><%= wig.title %></h4>
            </div>
            <p><%= wig.description %></p>
            <div class="flex">
              <div class="flex md-3">
                <i class="material-icons xs-3">$</i> <%= wig.price %>
              </div>
            </div>
          </div>
          <div class="wig-card-actions">
            <%= link_to 'Details', wig_path(wig) %>
            <a href="edit_wig_path" class="md-3 text-warning">Edit</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
</div>
