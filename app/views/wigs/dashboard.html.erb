
  <div class="wide-container">
    <div class="row">
      <h3 class="header">Browse all Wigs</h3>
      <% @wigs.each do |wig| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= wig.photo %>');">
         <div class="card-description">
          <h2><%=wig.title%></h2>
          <h6><%=wig.description%></h6>
            <p><%= wig.location%></p>
          </div>
          <%= link_to '', wig_path(wig), class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
